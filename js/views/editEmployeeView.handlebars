<div class="table-responsive">
  <form method="post" action='/employees/edit/{{data.id}}'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>Employee First Name: </td>
          <td><input type="text" name="fname" required size="40" 
                  value="{{data.firstName}}"></td>
        </tr>
        <tr>
          <th>Employee Last Name: </td>
          <td><input type="text" name="lname" size="40" 
                  value="{{data.lastName}}"></td>
        </tr>
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelAdd()"> <!-- public/javascripts/clickActions.js -->
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
